<h1>投稿詳細ページ</h1>
<h3><%= @photo.user.nickname %></h3>
<h3><%= @photo.content %></h3>
<h3>いいね件数: <%= @photo.likes.count %></h3>
<% if current_user.already_liked?(@photo) %>
  <%= button_to 'いいねを取り消す',photo_like_path(@photo), method: :delete %>
<% else %>
  <%= button_to 'いいね',photo_likes_path(@photo) %>
<% end %>
<h2>いいねしたユーザー</h2>
<% @photo.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<%= link_to "ホームへ戻る",root_path %>