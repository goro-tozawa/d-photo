<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Edit Account</h2>
      <h5>アカウント情報の変更</h5>
    </div>
    <div class='account-page__inner--right user-form'>
     <%# <%= form_for(resource, as: resource_name, url: user_registration_path(resource_name), html: { method: :put }) do |f| %> 

    <%= form_with model: @user, url:user_registration_path, class: 'registration-main', local: true do |f| %>
   
        <%= devise_error_messages!%>

              
        <div class='field'>
          <div class='field-label'>
             <%= f.label :image %><br/>
　          <span>アイコン画像を登録してください</span>
             <%= f.file_field :image, autofocus: true %>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname%><br/>
            <span>ニックネームを入力してください</span>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, placeholder:"例) ヒカキン", autofocus: true%>
          </div>
        </div>
        
         <div class="field">
           <div class='field-label'>
          <%= f.label :current_password %> <i>(変更にはパスワードが必要です)</i><br />
          </div>
          <%= f.password_field :current_password, autocomplete: "current-password",class: "form-control", placeholder: "必須項目です" %>
        </div>


        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, placeholder:"例) a1b2c3", autocomplete: "off"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>



        <div class='actions'>
          <%= f.submit "Edit Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
